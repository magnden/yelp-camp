<% include partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1 class="text-center">Add a new campground</h1>

    <hr>
    <div class="row">
      <div style="width:30%;margin:0 auto;">
        <form action="/campgrounds" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Name">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="Image URL">
          </div>
          <div class="form-group">
            <input class="form-control" type="textarea" name="description" placeholder="description">
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-md btn-block">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Go back to campgrounds</a>
      </div>
    </div>
  </div>
</header>
<div class="container">

</div>







