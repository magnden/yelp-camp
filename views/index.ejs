<% include partials/header %>


<header class="jumbotron">
  <div class="container">
    <h1>Hello, this is YelpCamp</h1>
    <p>View hand-picked campgrounds from all over the globe.</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a campground</a>
    </p>
  </div>
</header>

<div class="container">
  <h3>The most popular campgrounds</h3>
  <hr>
  <div class="row text-center" style="display:flex;flex-wrap: wrap;">

    <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= campground.image %>">
        <div>
          <h4 class="caption"><%= campground.name %></h4>
        </div>
        <p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
        </p>
      </div>



      </div>
    <% }); %>
  </div>





</div>

<% include partials/footer %>
